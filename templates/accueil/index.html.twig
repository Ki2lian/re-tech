{% block javascripts %}
    <script src="{{ asset('js/wishlist.js') }}"></script>
    <script>
        $(document).ready(function () {
            var block = false;
			$('body').on('click', '.annonce .fa-heart', function(){
				if(block) return;
				block = !block;
                toggleWishlist('{{ path('wishlist_toggler') }}', $(this))
				setTimeout(() => {
					block = !block;
				}, 1000);
				
            });
        });
    </script>
